<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".homeAct">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ohumb"></ImageView>

    <Button
        android:id="@+id/borrow_btn"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="280dp"
        android:text="대여하기"
        android:background="@drawable/button"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/return_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="반납하기"
        android:background="@drawable/button"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@+id/borrow_btn"
        app:layout_constraintStart_toStartOf="@+id/borrow_btn"
        app:layout_constraintEnd_toEndOf="@+id/borrow_btn"
        />

    //대여 안한 사람은 버튼 비활성화
    <Button
        android:id="@+id/rest_time_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="대여 남은 시간보기"
        android:background="@drawable/button"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/return_btn"
        app:layout_constraintStart_toStartOf="@+id/return_btn"
        app:layout_constraintEnd_toEndOf="@+id/return_btn"/>
    <Button
        android:id="@+id/report_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="우산 고장신고"
        android:background="@drawable/button"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/rest_time_btn"
        app:layout_constraintStart_toStartOf="@+id/rest_time_btn"
        app:layout_constraintEnd_toEndOf="@+id/rest_time_btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>